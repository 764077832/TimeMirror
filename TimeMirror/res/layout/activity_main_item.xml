<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/ll_man_item_width"
    android:layout_height="@dimen/ll_man_itme_height"
    android:background="@drawable/main_item_background"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_main_item_icon"
        android:layout_width="@dimen/iv_man_item_icon_width"
        android:layout_height="@dimen/ll_man_itme_icon_height"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/ic_launcher" 
        android:scaleType="fitXY"
        />
    
    <TextView 
        android:id="@+id/tv_main_item_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tv_man_itme_appname_height"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="func_name"
        />

</LinearLayout>